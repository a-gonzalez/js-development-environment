{
	"name": "ps-js-dev-env",
	"version": "1.0.0",
	"description": "Javascript Development Environment",
	"scripts": {
		"prestart": "babel-node ./build-scripts/pre-start.js",
		"start": "npm-run-all --parallel security open-src lint:watch test:watch start-mock",
		"open-src": "babel-node ./build-scripts/server.js",
		"security": "nsp check",
		"share": "npm-run-all --parallel open-src lt",
		"lt": "lt --port 3000 --subdomain trizion",
		"lint": "esw webpack.config.* src build-scripts --color",
		"lint:watch": "npm run lint -- --watch",
		"test": "mocha --reporter progress ./build-scripts/test.js \"src/**/*.test.js\"",
		"test:watch": "npm run test -- --watch",
		"mock": "babel-node build-scripts/generator",
		"prestart-mock": "npm run mock",
		"start-mock": "json-server --watch ./src/api/db.json --port 3001"
	},
	"author": "Antonio Gonzalez",
	"license": "MIT",
	"babel": {
		"presets": "latest"
	},
	"eslintConfig": {
		"root": true,
		"extends": [
			"eslint:recommended",
			"plugin:import/errors",
			"plugin:import/warnings"
		],
		"parserOptions": {
			"ecmaVersion": 7,
			"sourceType": "module"
		},
		"env": {
			"browser": true,
			"node": true,
			"mocha": true
		},
		"rules": {
			"no-console": 1,
			"prefer-const": 1,
			"no-var": 2
		}
	},
	"dependencies": {
		"whatwg-fetch": "1.0.0"
	},
	"devDependencies": {
		"babel-cli": "6.16.0",
		"babel-core": "6.17.0",
		"babel-eslint": "^8.2.3",
		"babel-loader": "6.2.5",
		"babel-preset-latest": "6.16.0",
		"babel-register": "6.16.3",
		"chai": "3.5.0",
		"chalk": "1.1.3",
		"cheerio": "0.22.0",
		"compression": "1.6.2",
		"cross-env": "3.1.3",
		"css-loader": "0.25.0",
		"eslint": "3.8.1",
		"eslint-plugin-import": "2.0.1",
		"eslint-watch": "2.1.14",
		"express": "4.14.0",
		"extract-text-webpack-plugin": "1.0.1",
		"html-webpack-plugin": "2.22.0",
		"jsdom": "9.8.0",
		"json-schema-faker": "0.3.6",
		"json-server": "0.8.22",
		"localtunnel": "1.8.1",
		"mocha": "3.1.2",
		"nock": "8.1.0",
		"npm-run-all": "3.1.1",
		"nsp": "2.6.2",
		"numeral": "1.5.3",
		"open": "0.0.5",
		"rimraf": "2.5.4",
		"style-loader": "0.13.1",
		"webpack": "1.13.2",
		"webpack-dev-middleware": "1.8.4",
		"webpack-hot-middleware": "2.13.0",
		"webpack-md5-hash": "0.0.5"
	}
}
